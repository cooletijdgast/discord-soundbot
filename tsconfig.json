{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "outDir": "dist",
    "lib": [
      "ES2020", "ESNext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*",
    "bin/**/*"
, "server.ts"  ],

  "exclude": [
    "**/__test__",
    "**/__mocks__"
  ]
}
